{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./.env.*local"],

  "tasks": {
    "build": {
      "inputs": [".env.local", ".env.production", ".env"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "pre:deploy": {
      "dependsOn": ["build"],
      "inputs": ["dist/**"],
      "outputs": ["out/**"]
    },
    "deploy": {
      "dependsOn": ["^pre:deploy"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "validate": {},
    "typecheck": {},
    "validate:check": {},
    "test": {},
    "test:coverage": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
