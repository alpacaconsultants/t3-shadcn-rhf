{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./.env.*local"],
  "globalEnv": ["ENV"],
  "tasks": {
    "build": {
      "env": ["ENV"],
      "dependsOn": ["^build"],
      "inputs": [".env.local", ".env.prod", ".env", ".env.dev", "src/**"],
      "outputs": ["dist/**", ".open-next/**", ".next/**"]
    },
    "deploy": {
      "env": ["ENV"],
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "validate": {},
    "typecheck": {},
    "validate:check": {},
    "test": {},
    "test:coverage": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
